# =============================================================================
# ANONYMOUS COURT INVESTIGATION SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains example environment variables for the project.
# Copy this file to .env and fill in your actual values.
#
# IMPORTANT SECURITY NOTES:
# - NEVER commit the .env file to version control
# - NEVER share your private key or API keys
# - Use different keys for development and production
# - Rotate keys regularly
# - Use hardware wallets for production
# =============================================================================

# -----------------------------------------------------------------------------
# NETWORK RPC ENDPOINTS
# -----------------------------------------------------------------------------
# Get your RPC URL from Infura (https://infura.io) or Alchemy (https://alchemy.com)

# Sepolia Testnet RPC URL (Required for deployment)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Alternative: SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Mainnet RPC URL (For production deployment)
# MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Optional: Other networks
# GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
# ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# -----------------------------------------------------------------------------
# DEPLOYMENT ACCOUNTS
# -----------------------------------------------------------------------------
# Private key of the account that will deploy the contract
# WARNING: Keep this secure! Never share or commit this to git!
#
# How to get your private key:
# - MetaMask: Account Details → Export Private Key
# - Make sure the account has sufficient ETH for deployment
#
# Example: PRIVATE_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Optional: Separate keys for different roles (recommended for production)
# ADMIN_PRIVATE_KEY=your_admin_private_key_here
# DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here
# PAUSER_PRIVATE_KEY=your_pauser_private_key_here

# -----------------------------------------------------------------------------
# ETHERSCAN API KEY
# -----------------------------------------------------------------------------
# Required for contract verification on Etherscan
# Get your API key from: https://etherscan.io/myapikey
#
# Example: ETHERSCAN_API_KEY=ABC123DEF456GHI789JKL012MNO345PQR678

ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Optional: Block explorer API keys for other networks
# POLYGONSCAN_API_KEY=your_polygonscan_api_key
# ARBISCAN_API_KEY=your_arbiscan_api_key

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# Access Control Settings

# Admin address (has full control over the contract)
ADMIN_ADDRESS=0x0000000000000000000000000000000000000000

# Pauser addresses (can pause/unpause contract in emergency)
PAUSER_ADDRESS_1=0x0000000000000000000000000000000000000000
PAUSER_ADDRESS_2=0x0000000000000000000000000000000000000000

# Authorized investigators (can start and manage investigations)
AUTHORIZED_INVESTIGATOR_1=0x0000000000000000000000000000000000000000
AUTHORIZED_INVESTIGATOR_2=0x0000000000000000000000000000000000000000

# Authorized judges (can submit verdicts)
AUTHORIZED_JUDGE_1=0x0000000000000000000000000000000000000000
AUTHORIZED_JUDGE_2=0x0000000000000000000000000000000000000000

# Emergency contact addresses (for notifications)
EMERGENCY_CONTACT_EMAIL=security@example.com
EMERGENCY_CONTACT_TELEGRAM=@security_team

# -----------------------------------------------------------------------------
# PERFORMANCE & GAS OPTIMIZATION
# -----------------------------------------------------------------------------
# Gas Reporter Settings

# Enable gas reporting during tests
REPORT_GAS=false

# CoinMarketCap API key for USD gas pricing
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Gas price settings (in gwei)
# MAX_GAS_PRICE=100
# MIN_GAS_PRICE=1

# Gas limit settings
# DEFAULT_GAS_LIMIT=8000000
# MAX_GAS_LIMIT=30000000

# Priority fee settings (EIP-1559)
# MAX_PRIORITY_FEE_PER_GAS=2
# MAX_FEE_PER_GAS=100

# -----------------------------------------------------------------------------
# COMPILER OPTIMIZATION
# -----------------------------------------------------------------------------
# Solidity compiler optimization settings

# Enable optimizer (true for production, false for debugging)
OPTIMIZER_ENABLED=true

# Optimizer runs (higher = more expensive deployment, cheaper execution)
# 200 = balanced, 1 = cheap deployment, 10000 = cheap execution
OPTIMIZER_RUNS=200

# Via IR compilation (advanced optimization)
VIA_IR=true

# EVM version target
EVM_VERSION=cancun

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS
# -----------------------------------------------------------------------------
# Service API keys for monitoring

# Tenderly API key (for transaction monitoring)
# TENDERLY_PROJECT_ID=your_tenderly_project_id
# TENDERLY_USERNAME=your_tenderly_username
# TENDERLY_ACCESS_KEY=your_tenderly_access_key

# Defender API keys (for automated operations)
# DEFENDER_API_KEY=your_defender_api_key
# DEFENDER_API_SECRET=your_defender_api_secret

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# -----------------------------------------------------------------------------
# TESTING CONFIGURATION
# -----------------------------------------------------------------------------
# Test environment settings

# Test network fork (for mainnet forking tests)
# FORK_MAINNET=false
# FORK_BLOCK_NUMBER=latest

# Test coverage thresholds
# COVERAGE_THRESHOLD_STATEMENTS=95
# COVERAGE_THRESHOLD_BRANCHES=90
# COVERAGE_THRESHOLD_FUNCTIONS=95
# COVERAGE_THRESHOLD_LINES=95

# Mocha test timeout (milliseconds)
MOCHA_TIMEOUT=200000

# Parallel test execution
# PARALLEL_TESTS=false

# -----------------------------------------------------------------------------
# CI/CD CONFIGURATION
# -----------------------------------------------------------------------------
# Continuous Integration settings

# Enable CI mode
# CI=false

# Skip certain checks in CI
# SKIP_LOAD_DOTENV=false

# Codecov token (for coverage reporting)
# CODECOV_TOKEN=your_codecov_token

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
# Local development configuration

# Mnemonic for local development (NEVER use in production!)
# MNEMONIC=test test test test test test test test test test test junk

# Local network settings
LOCALHOST_RPC_URL=http://127.0.0.1:8545
LOCALHOST_CHAIN_ID=31337

# Hardhat network settings
# HARDHAT_CHAIN_ID=31337
# HARDHAT_FORK=false

# Debug mode
# DEBUG=false
# VERBOSE=false

# -----------------------------------------------------------------------------
# RATE LIMITING & DOS PROTECTION
# -----------------------------------------------------------------------------
# Protection against denial of service attacks

# Maximum transactions per block
# MAX_TX_PER_BLOCK=10

# Rate limit per address (transactions per hour)
# RATE_LIMIT_PER_ADDRESS=100

# Minimum time between operations (seconds)
# MIN_OPERATION_INTERVAL=1

# Maximum evidence submissions per investigation
# MAX_EVIDENCE_PER_INVESTIGATION=100

# Maximum witness testimonies per investigation
# MAX_WITNESSES_PER_INVESTIGATION=50

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
# Frontend application settings

# API endpoint
# NEXT_PUBLIC_API_URL=https://api.example.com

# Contract addresses (populated after deployment)
# NEXT_PUBLIC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Network configuration
# NEXT_PUBLIC_CHAIN_ID=11155111
# NEXT_PUBLIC_NETWORK_NAME=sepolia

# WalletConnect project ID
# NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Feature flags
# NEXT_PUBLIC_ENABLE_ANALYTICS=false
# NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false

# -----------------------------------------------------------------------------
# BACKUP & RECOVERY
# -----------------------------------------------------------------------------
# Backup and disaster recovery settings

# Backup frequency (hours)
# BACKUP_FREQUENCY=24

# Backup retention (days)
# BACKUP_RETENTION=30

# Recovery email
# RECOVERY_EMAIL=recovery@example.com

# Multi-sig wallet addresses (for critical operations)
# MULTISIG_WALLET_ADDRESS=0x0000000000000000000000000000000000000000
# MULTISIG_THRESHOLD=2
# MULTISIG_OWNERS=0xAddr1,0xAddr2,0xAddr3

# -----------------------------------------------------------------------------
# LOGGING & DEBUGGING
# -----------------------------------------------------------------------------
# Logging configuration

# Log level (error, warn, info, debug, trace)
# LOG_LEVEL=info

# Log file path
# LOG_FILE=./logs/application.log

# Enable stack traces
# STACK_TRACES=true

